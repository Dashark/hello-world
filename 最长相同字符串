int main()

{

	int i,num1,num2,num3,numb,j,k;



	char b[100];

	char a[100];

	char same[100];

	

	scanf("%s",&a);

	scanf("%s",&b);

	num1=strlen(a);



	num2=strlen(b);

	for(i=num1-1,j=num2-1,k=0;j>=0,i>=0;i--,j--,k++)

		{

			if(a[num1-1]!=b[num2-1])

			{

				printf("null");

				break;

			}

		if(a[i]==b[j]){

			same[k]=a[i];

			}

		else{break;

		}

			

		}

	num3=strlen(same);

	

	for(i=num3-1;i>=0;i--)

	{printf("%c",same[i]);

	}

	



	return 0;

}
