			cout<<"±ß³¤Îª"<<side<<"µÄÕý·½ÐÎµÄÖÜ³¤Îª"<<4*side<<"£¬Ãæ»ýÎª"<<side*side<<endl;

		}

	

	private:

		double side;

	

}; 





